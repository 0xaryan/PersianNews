<Page x:Class="PersianNews.Views.Pages.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:PersianNews.Views.Pages"
      mc:Ignorable="d"
      FontSize="20"
      FontFamily="{StaticResource Fonts.IRMitra}"
      d:DesignHeight="450" d:DesignWidth="800"
      Background="White"
      Title="MainPage">

    <Grid FlowDirection="RightToLeft">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock FontWeight="Bold" HorizontalAlignment="Center" FontSize="30">پروژه NLP دانشگاه گیلان</TextBlock>
            <TextBlock FontWeight="Normal" HorizontalAlignment="Center" FontSize="20">آرین ابراهیم پور، هستی حسنی مقدم</TextBlock>

            <StackPanel MinWidth="300" Margin="0 10 0 0">
                <Button Click="HazmButton_Click">مشاهده پروژه نهایی</Button>
                <Button Margin="0 5 0 0" Click="HazmButton_Click">زمین بازی با Hazm</Button>
                <Button Click="DataViewerButton_Click" Margin="0 5 0 0">مرورگر داده ها</Button>
                <Button Click="ExitButton_Click" Margin="0 5 0 0">خروج</Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>

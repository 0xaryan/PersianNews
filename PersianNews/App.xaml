<Application
    x:Class="PersianNews.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:PersianNews"
    StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>

                <!--#region Colors-->
                <ResourceDictionary Source="pack://application:,,,/PersianNews;component/Assets/Colors/SolidColors.xaml" />
                <ResourceDictionary Source="pack://application:,,,/PersianNews;component/Assets/Colors/GradientColors.xaml" />
                <ResourceDictionary Source="pack://application:,,,/PersianNews;component/Assets/Colors/Brushes/SolidColorBrushes.xaml" />
                <ResourceDictionary Source="pack://application:,,,/PersianNews;component/Assets/Colors/Brushes/GradientColorBrushes.xaml" />
                <!--#endregion-->

                <!--#region Fonts-->
                <ResourceDictionary Source="pack://application:,,,/PersianNews;component/Assets/Fonts/Fonts.xaml" />
                <!--#endregion-->

                <!--#region Images-->
                <ResourceDictionary Source="pack://application:,,,/PersianNews;component/Assets/Images/MenuIcons.xaml" />
                <!--#endregion-->

                <!--#region Strings-->
                <ResourceDictionary Source="pack://application:,,,/PersianNews;component/Assets/Strings/ApplicationStrings.xaml" />
                <!--#endregion-->

                <!--#region Styles-->
                <ResourceDictionary Source="pack://application:,,,/PersianNews;component/Views/Styles/GeneralStyles.xaml" />
                <!--#endregion-->

                <!--#region Templates-->
                <ResourceDictionary Source="pack://application:,,,/PersianNews;component/Views/Templates/GeneralTemplates.xaml" />
                <!--#endregion-->

            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
